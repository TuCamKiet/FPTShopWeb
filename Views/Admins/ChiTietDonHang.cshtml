@using DO_AN_FPT_SHOP.Models
@model List<OrderDetail>
@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    h2 {
        width: 310px;
        margin-left: 39%;
        color: #3350b4;
        border-bottom: 5px solid lightgray;
    }

    #admin-title {
        margin-left: 45%;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        color: #3350b4;
    }
</style>
<H1 id="admin-title">ADMIN</H1>
<h2>CHI TIẾT ĐƠN HÀNG</h2>
<table class="table">
    <tr>
        <th>
            MÃ ĐẶT HÀNG
        </th>
        <th>
            MÃ ĐƠN HÀNG
        </th>
        <th>
            MÃ SẢN PHẨM
        </th>
        <th>
            TÊN SẢN PHẨM
        </th>
        <th>
            ẢNH
        </th>
        <th>
            SỐ LƯỢNG
        </th>
        <th>
            GIÁ
        </th>
    </tr>
    @foreach (var orDe in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(orDeItem => orDe.OrderID)
            </td>
            <td>
                @Html.DisplayFor(orDeItem => orDe.OrderDetailID)
            </td>
            <td>
                @Html.DisplayFor(orDeItem => orDe.ProDeID)
            </td>
            <td>
                @Html.DisplayFor(orDeItem => orDe.ProDetail.Product.ProName)
            </td>
            <td>
                <img width="100" height="100" src="@Html.DisplayFor(orDeItem=>orDe.ProDetail.ColorProDes.FirstOrDefault().ProImg)" />
            </td>
            <td>
                @Html.DisplayFor(orDeItem => orDe.Quantity)
            </td>
            <td>
                @Html.DisplayFor(orDeItem => orDe.Price)
            </td>
        </tr>
    }
</table>

