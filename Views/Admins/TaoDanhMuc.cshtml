@{
    ViewBag.Title = "Danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tạo hàng hóa</title>
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<style>
    h2 {
        width: 400px;
        border-bottom: 4px solid lightgray;
    }

    input {
        margin-top: 5px;
        border-radius: 8px;
        height: 35px;
    }

    h2 {
        width: 310px;
        margin-left: 39%;
        color: #3350b4;
        border-bottom: 5px solid lightgray;
    }


    #admin-title {
        margin-left: 45%;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        color: #3350b4;
    }
</style>
<body>
    <h1 id="admin-title">ADMIN</h1>
    <h2>THÊM DANH MỤC</h2>
    <form action="~/Admins/TaoDanhMuc" method="post">
        <div class="form-horizontal">
            <div class="form-group" style="width:1200px;margin:0px auto; margin-top:20px">
                <div class="control-label col-md-2">
                    DANH MỤC
                </div>
                <div class="col-md-10">
                    <input required maxlength="50" name="NameCate" type="text" />
                </div>
                <div class="col-sm-offset-2 col-sm-10" style="margin-top:10px">
                    <input type="submit" value="Thêm mới" class="btn btn-primary" />
                    @Html.ActionLink("Danh sách", "DanhSachDanhMuc", null, new { @class = "btn btn-info" })
                </div>
            </div>
        </div>
    </form>


</body>
</html>
